page {
  background-color: #eee;
}

.case-page {
  padding: 20rpx;
}

.date_info_box {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  font-size: 32rpx;
  color: #a38063;
  padding-left: 20rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  border-bottom: 1px solid #e6e6e6;
}

.date_info_box text {
  font-weight: bold;
}

.list-masonry {
  column-count: 2;
  column-gap: 20rpx;
  margin-top: 100rpx;
}

.item-masonry {
  background-color: #fff;
  break-inside: avoid;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.item-masonry image {
  width: 100%;
  border-radius: 8rpx;
}

.item-title {
  font-size: 30rpx;
  line-height: 50rpx;
  color: #ad7d4c;
}

.item-date {
  font-size: 24rpx;
  color: #b68d4c;
  margin-top: 20rpx;
}

.citybody {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0px;
  z-index: 800;
  background-color: #fff;
}

.picker-mask {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 799;
}

.cityheader {
  position: absolute;
  top: 0px;
  left: 0;
  width: 100%;
  z-index: 800;
}

.city-cancel {
  float: left;
  margin: 30rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 30rpx;
  color: #a38063;
}
